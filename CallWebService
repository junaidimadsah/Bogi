/*
 * http://localhost/NPP/NPPService.svc
 * Call Async Web Service 
 */
Console.WriteLine("Calling web service reference");
Console.WriteLine("");

NPPServiceClient client = new NPPServiceClient();            
Account reqAccount = new Account("572000", "1", "Guofeng", Account.AccountStatus.Open, new Account.AccountBalance(100M, 100M));
UpdateAccountInfoRequest updateRequest = new UpdateAccountInfoRequest(reqAccount, "test");

var retObj = Task.Run(async () =>
{
    var t = await client.SyncAccountInfoAsync(updateRequest); 
    return t;
});

var objRet = retObj.Result;

client.Close();

Console.WriteLine(objRet.ResponseCode);
